<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.revature.servlets.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>viewEmployees</servlet-name>
        <servlet-class>com.revature.servlets.ViewEmployees</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>updateEmployee</servlet-name>
        <servlet-class>com.revature.servlets.UpdateServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>deleteEmployee</servlet-name>
        <servlet-class>com.revature.servlets.DeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>viewEmployees</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>updateEmployee</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>deleteEmployee</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>




</web-app>
